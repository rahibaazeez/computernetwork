#!/bin/bash
echo "Enter first mark "
read a
echo "Enter second mark "
read b
echo "Enter third mark "
read c
sum=$((a + b + c))
echo "the sum is $sum"
avg=$((sum / 3))
echo "THe avg is $avg "
if [ $avg -gt 90 ]
then
   echo "A+"
elif [ $avg -gt 50 ]
then
        echo "B+"
elif [ $avg -lt 50 ]
then
        echo "fail"
else
        echo "Invalid"
fi
